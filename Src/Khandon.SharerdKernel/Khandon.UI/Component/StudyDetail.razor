<MudDialog>
    <DialogContent>
        @if (loading == false)
        {
            @*<MudCard Outlined="true">*@
            <MudCardContent>
                <MudText Typo="Typo.h6" Align="Align.Center">@study.Title</MudText>
                <MudDivider></MudDivider>
                <MudText Typo="Typo.subtitle2" Align="Align.Center" Class="mt-1">@study.CreateDate.ToShamsi()</MudText>
                @if (study.Flag != null && study.Flag != 0)
                {
                    <MudText Typo="Typo.subtitle2" Align="Align.Center" Class="mt-1">@study.Flag نشانگر</MudText>
                }
                <MudText Typo="Typo.subtitle2" Align="Align.Center" Class="mb-4">@study.Length @((study.BookType==Khandon.Shared.Dto.Enums.BookTypeEnum.Minut)?"دقیقه":"صفحه")</MudText>
                <MudText Typo="Typo.body2" Align="Align.Center">@study.ShortDescription</MudText>
            </MudCardContent>
            @*     <MudCardActions>
        <MudButton Variant="Variant.Text" Color="Color.Primary">Learn More</MudButton>
        </MudCardActions>*@
            @*</MudCard>*@
        }
        else
        {
            <div style="text-align:center">
                <MudProgressCircular Color="Color.Primary" Style="height:70px;width:70px;" Indeterminate="true" />
            </div>
        }

    </DialogContent>
    <DialogActions>
        <MudSpacer></MudSpacer>
        <MudButton Style="text-align:center" Color="Color.Primary" OnClick="Cancel">باشه</MudButton>
        <MudSpacer></MudSpacer>

    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }

    [Parameter] public StudyResult study { get; set; }

    bool loading = false;
    protected override void OnAfterRender(bool firstRender)
    {
        //loading = false;

    }
    void Submit() => MudDialog.Close(DialogResult.Ok(true));
    void Cancel() => MudDialog.Cancel();
}
